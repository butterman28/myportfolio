{
  "name": "myportfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel tailwind:watch esbuild:watch serve",
    "serve": "serve src -l 3000",
    "build": "npm-run-all tailwind:build esbuild:build",
    "tailwind:watch": "tailwindcss -i ./src/input.css -o ./src/output.css --watch",
    "tailwind:build": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "esbuild:watch": "esbuild src/main.js --bundle --platform=browser --format=esm --outfile=src/app.js --watch",
    "esbuild:build": "esbuild src/main.js --bundle --platform=browser --format=esm --outfile=dist/app.js --minify"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "serve": "^14.2.5",
    "tailwindcss": "^4.1.18"
  }
}
